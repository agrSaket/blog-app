<div class="author">
    <h1 class="author__heading">Welcome to EnlightenMe</h1>
    <p class="author__body">Discover, Explore and Ignite Your Curiosity with Captivating Blogs.</p>
</div>
  
<img src="img/homeblog3.jpg" alt="person looking out through window" class="hero-image" width="981" height="528">
<!-- <img src="img/bloghome.jpg" alt="person looking out through window" class="hero-image" width="981" height="528"> -->
  
<section class="articles">
    <h2 class="articles__heading">Latest Blogs</h2>
  
    <ul class="article-ul">
      <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>">
            <span><%= post.title %></span>
            <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
          </a>
        </li>
      <% }) %>
    </ul>
  
    <div class="olpost">
      <div>
        <% if (nextPage !== null) { %>
          <a href="/?page=<%= nextPage %>" class="pagination">&lt; Older Posts</a>
        <% } %>
      </div>
      <div>
        <% if (latestPage !== 0) { %>
          <a href="/?page=<%= latestPage %>" class="pagination">Latest Posts &gt;</a>
        <% } %>
      </div>
    </div>
</section>

<script>
  const latestPage = nextPage-1;
</script>